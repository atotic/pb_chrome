{
  "name": "pdf_saver_extension",
  "version": "30.0.1599.0",
  "description": "PDF conversion with pageCapture.saveAsPDF",
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
  	"default_title": "save as PDF on server"
  },
  "content_scripts": [ /*{
    "matches": ["http://*.pb4us.com/*"],
    "js": ["content.js"]
  }*/],
  "permissions": [
	 "tabs",
	 "pageCapture",
	 "notifications",
	 "http://*/",
	 "webNavigation",
	 "<all_urls>"
  ],
  "manifest_version": 2
}
